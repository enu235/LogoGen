# LogoGen Configuration

# API Configuration (Required)
API_KEY=your_api_key_here
API_BASE_URL=https://api.x.ai/v1
MODEL_NAME=grok-vision-beta

# Server Configuration
PORT=3000
NODE_ENV=development

# Image Configuration
LOGO_SIZE=1024
ICON_SIZE=64
MAX_FILE_SIZE=10485760

# LLM Configuration for Prompt Enhancement
ENABLE_PROMPT_ENHANCEMENT=false
LLM_API_KEY=your_llm_api_key_here
LLM_API_BASE_URL=https://api.x.ai/v1
LLM_MODEL_NAME=grok-beta
USE_SHARED_API_KEY=true

# Database Configuration
# Enable/disable all database logging
ENABLE_DATABASE_LOGGING=false

# Granular logging control (optional - defaults to ENABLE_DATABASE_LOGGING value)
LOG_TRANSACTIONS=false
LOG_API_REQUESTS=false
LOG_SYSTEM_EVENTS=false

# Database Type (mock, postgresql, mongodb, cosmos)
DATABASE_TYPE=mock

# Database Connection (for non-mock databases)
DATABASE_CONNECTION_STRING=

# Database Settings
DATABASE_RETRY_ATTEMPTS=3
DATABASE_RETRY_DELAY=1000
DATABASE_DATA_DIR=data/database 