# API Configuration
API_KEY=your_api_key_here
API_BASE_URL=https://api.x.ai/v1
MODEL_NAME=grok-vision-beta

# LLM Prompt Enhancement Configuration
ENABLE_PROMPT_ENHANCEMENT=true
LLM_API_KEY=your_llm_api_key_here
LLM_API_BASE_URL=https://api.x.ai/v1
LLM_MODEL_NAME=grok-beta

# Smart Key Detection - Use same key if platforms match
# Set to 'true' to automatically use API_KEY for LLM if base URLs match
USE_SHARED_API_KEY=true

# Server Configuration
PORT=3000
NODE_ENV=development

# Image Processing
MAX_FILE_SIZE=10485760
LOGO_SIZE=1024
ICON_SIZE=64

# Storage Configuration
# USE_DOCKER_VOLUMES=false  # Set to true to use Docker volumes instead of bind mounts
